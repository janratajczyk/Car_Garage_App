<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFFD8"
    android:backgroundTint="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_text_vin"
            android:hint="WprowadÅº VIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_fetch_vin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#A4CCD9"
            android:text="Pobierz dane z VIN"
            android:textColor="#EBFFD8" />
        <EditText
            android:id="@+id/editTextBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Marka samochodu"
            android:textColor="#EBFFD8" />

        <EditText
            android:id="@+id/editTextModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Model samochodu"
            android:textColor="#EBFFD8" />

        <EditText
            android:id="@+id/editTextYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rocznik"
            android:inputType="number"
            android:textColor="#EBFFD8" />

        <EditText
            android:id="@+id/editTextRegistration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rejestracja"
            android:textColor="#EBFFD8" />

        <Button
            android:id="@+id/buttonSaveCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#A4CCD9"
            android:text="Zapisz"
            android:textColor="#EBFFD8" />
    </LinearLayout>
</ScrollView>
